################################################################################################################################################################

jupyter labextension install @jupyterlab/plotly-extension

wget --quiet https://github.com/open-space-collective/open-space-toolkit-physics/archive/master.zip

unzip -q master.zip

mkdir -p /home/jovyan/open-space-toolkit

mv open-space-toolkit-physics-master/share /home/jovyan/open-space-toolkit/physics

rm master.zip
rm -rf open-space-toolkit-physics-master

################################################################################################################################################################
